<%= javascript_include_tag 'register'%>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" class="active" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="#" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { style: 'display: block;', id: 'login-form' } ) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', tabindex: '1',  autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', tabindex: '2', autocomplete: "off" %>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Log In", id: 'login-submit', class: 'form-control btn btn-login', tabindex: '4' %>
                    </div>
                  </div>
                </div>
              <% end %>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { style: 'display: none;', id: 'register-form' } ) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', tabindex: '1',  autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', tabindex: '2', autocomplete: "off" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation,class: 'form-control', placeholder: 'Confirm Password', tabindex: '2', autocomplete: "off" %>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Sign up", id: 'register-submit', class: 'form-control btn btn-register', tabindex: '4' %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
